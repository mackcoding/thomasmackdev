@page
@model thomasmack.dev.Pages.ContactModel
@{
}
@section Subheader {
        Contact Me
}

<div class="max-w-2xl mx-auto">
    <div class="border border-base-content/20 bg-base-200 rounded-2xl shadow-lg p-8 opacity-75">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold mb-2">Get In Touch</h2>
            <p class="text-base-content/60">I'd love to hear from you. Send me a message and I'll respond as soon as possible.</p>
        </div>

        <form method="post" class="space-y-6">
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium flex items-center gap-2">
                        <span class="icon-[heroicons--envelope] text-lg"></span>
                        Email
                    </span>
                </label>
                <input asp-for="Req.From" type="email" placeholder="Enter your email address"
                       class="input input-bordered w-full bg-base-100 border-base-content/20 focus:border-info focus:outline-none" />
                <span asp-validation-for="Req.From" class="text-sm text-red-600"></span>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium flex items-center gap-2">
                        <span class="icon-[heroicons--pencil] text-lg"></span>
                        Subject
                    </span>
                </label>
                <input asp-for="Req.Subject" placeholder="Enter subject"
                       class="input input-bordered w-full bg-base-100 border-base-content/20 focus:border-info focus:outline-none" />
                <span asp-validation-for="Req.Subject" class="text-sm text-red-600"></span>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium flex items-center gap-2">
                        <span class="icon-[heroicons--chat-bubble-left-right] text-lg"></span>
                        Message
                    </span>
                </label>
                <textarea asp-for="Req.Body" placeholder="Write your message here..."
                          class="textarea textarea-bordered h-32 w-full bg-base-100 border-base-content/20 focus:border-info focus:outline-none resize-none"></textarea>
                <span asp-validation-for="Req.Body" class="text-sm text-red-600"></span>
            </div>

            <div class="form-control mt-8">
                <button type="submit"
                        class="btn btn-lg rounded-full px-8 !font-normal">
                    <span class="icon-[heroicons--paper-airplane] mr-2"></span>
                    Send Message
                </button>
            </div>
        </form>
    </div>

    <div class="mt-8 text-center">
        <p class="text-sm text-base-content/60 mb-4">Reach out directly instead</p>
        <div class="flex justify-center space-x-6">
            <a href="https://github.com/mackcoding" target="_blank" rel="noopener noreferrer"
               class="flex items-center gap-2 text-base-content/80 hover:text-info transition-colors">
                <span class="icon-[fa-brands--github] text-xl"></span>
                GitHub
            </a>
            <a href="https://linkedin.com/in/mackt" target="_blank" rel="noopener noreferrer"
               class="flex items-center gap-2 text-base-content/80 hover:text-info transition-colors">
                <span class="icon-[fa-brands--linkedin] text-xl"></span>
                LinkedIn
            </a>
            <a href="https://bsky.app/mackhax0r.bsky.social" target="_blank" rel="noopener noreferrer"
               class="flex items-center gap-2 text-base-content/80 hover:text-info transition-colors">
                <span class="icon-[simple-icons--bluesky] text-xl"></span>
                Bluesky
            </a>
        </div>
    </div>
</div>
