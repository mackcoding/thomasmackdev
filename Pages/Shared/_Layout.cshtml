<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thomas Mack's Resume</title>
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body class="min-h-screen flex flex-col bg-base-100 text-base-content">
    <header class="flex flex-col bg-base-100 lg:flex-row lg:items-center">
        <div class="flex h-20 items-center px-4 lg:px-6">
            <div class="flex items-center gap-3">
                <div class="avatar">
                    <div class="w-12 rounded-full ring ring-primary ring-offset-2 ring-offset-base-200">
                        <img src="~/images/profile.jpg" alt="Thomas Mack" class="grayscale hover:grayscale-0 transition-all duration-300" />
                    </div>

                </div>
                <div>
                    <h1 class="text-xl font-semibold">Thomas Mack</h1>
                    <p class="pl-2.5 text-xs opacity-60 sm:text-sm">DevOps Engineer</p>
                </div>
            </div>

            <label for="navbar-toggle" class="btn btn-ghost ml-auto border border-base-content/30 hover:border-base-content/20 hover:bg-base-content/10 lg:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
                </svg>
            </label>
        </div>

        <input type="checkbox" id="navbar-toggle" class="peer hidden" />

        <ul class="menu menu-vertical hidden w-full px-4 peer-checked:flex lg:menu-horizontal lg:ml-auto lg:flex lg:w-auto lg:px-6">
            <li>
                <a href="/" class="flex items-center gap-1 px-2 py-2">
                    <span class="icon-[mdi-light--home] text-lg menu-icon"></span> Home
                </a>
            </li>

            <li>
                <a href="/portfolio" class="flex items-center gap-1 px-2 py-2">
                    <span class="icon-[bytesize--portfolio] text-lg menu-icon"></span> Portfolio
                </a>
            </li>
            <li>
                <a href="/sites" class="flex items-center gap-1 px-2 py-2">
                    <span class="icon-[iconoir--www] text-lg menu-icon"></span> Sites
                </a>
            </li>
            <li>
                <a href="/projects" class="flex items-center gap-1 px-2 py-2">
                    <span class="icon-[hugeicons--code] text-lg menu-icon"></span> Projects
                </a>
            </li>
            <li>
                <a href="/contact" class="flex items-center gap-1 px-2 py-2">
                    <span class="icon-[streamline--send-email] text-lg menu-icon"></span> Contact
                </a>
            </li>
            <li>
                <a href="/about" class="flex items-center gap-1 px-2 py-2">
                    <span class="icon-[ix--about] text-lg menu-icon"></span> About
                </a>
            </li>
        </ul>


    </header>
    <header class="flex items-center bg-base-200 shadow-lg border-t border-b border-base-content/20 h-[80px] px-4 md:px-8 lg:px-[50px] text-2xl mb-6">
        @RenderSection("Subheader", required: false)
    </header>



    <main class="w-full md:w-4/5 mx-auto px-6 py-12 pt-2">
        @RenderBody()
    </main>


    <footer class="mt-auto bg-base-200 text-base-content p-10">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="space-y-2">
                <div class="flex">
                    <h2 class="flex items-center gap-2 text-xl font-bold">
                        <span class="icon-[gg--profile] text-2xl"></span>
                        Thomas Mack
                    </h2>
                </div>
                <p class="max-w-xs text-xs text-base-content/60">
                    Self-taught DevOps engineer specializing in Kubernetes automation with Ansible, Helm, and GitOps and experienced in platform administration, development, and support across education, SaaS, and blockchain.
                </p>
                <div class="flex justify-center space-x-4 mt-6">
                    <a href="https://github.com/mackcoding" target="_blank" rel="noopener noreferrer">
                        <span class="icon-[fa-brands--github] text-2xl"></span>
                    </a>
                    <a href="https://linkedin.com/in/mackt" target="_blank" rel="noopener noreferrer">
                        <span class="icon-[fa-brands--linkedin] text-2xl"></span>
                    </a>
                    <a href="https://bsky.app/mackhax0r.bsky.social" target="_blank" rel="noopener noreferrer">
                        <span class="icon-[simple-icons--bluesky] text-2xl"></span>
                    </a>
                    <a href="/contact">
                        <span class="icon-[streamline--send-email] text-2xl"></span>
                    </a>
                </div>
            </div>

            <div class="space-y-2">
                <h3 class="flex items-center gap-2 text-lg font-bold">
                    <span class="icon-[iconoir--link] text-xl"></span>
                    Quick Links
                </h3>
                <ul class="grid grid-cols-2 gap-y-2 gap-x-1">
                    <li>
                        <a href="/" class="link link-hover flex items-center gap-2">
                            <span class="icon-[mdi-light--home] text-lg"></span>
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="/portfolio" class="link link-hover flex items-center gap-2">
                            <span class="icon-[bytesize--portfolio] text-lg"></span>
                            Portfolio
                        </a>
                    </li>
                    <li>
                        <a href="/sites" class="link link-hover flex items-center gap-2">
                            <span class="icon-[iconoir--www] text-lg"></span>
                            Sites
                        </a>
                    </li>
                    <li>
                        <a href="/projects" class="link link-hover flex items-center gap-2">
                            <span class="icon-[hugeicons--code] text-lg"></span>
                            Projects
                        </a>
                    </li>
                    <li>
                        <a href="/contact" class="link link-hover flex items-center gap-2">
                            <span class="icon-[streamline--send-email] text-lg"></span>
                            Contact
                        </a>
                    </li>
                    <li>
                        <a href="/about" class="link link-hover flex items-center gap-2">
                            <span class="icon-[ix--about] text-lg"></span>
                            About
                        </a>
                    </li>
                </ul>
            </div>


            <div class="space-y-2">
                <h3 class="flex items-center gap-2 text-lg font-bold">
                    <span class="icon-[bytesize--code] text-xl"></span>
                    Tech Stack
                </h3>
                <div class="grid grid-cols-2 gap-2">
                    <span class="btn btn-outline border-base-content/40 hover:border-base-content/40 focus:border-base-content/40 w-full justify-start gap-2 cursor-default">
                        <span class="icon-[simple-icons--kubernetes] text-xl"></span>
                        Kubernetes
                    </span>
                    <span class="btn btn-outline border-base-content/40 hover:border-base-content/40 focus:border-base-content/40 w-full justify-start gap-2 cursor-default">
                        <span class="icon-[simple-icons--go] text-xl"></span>
                        Go
                    </span>
                    <span class="btn btn-outline border-base-content/40 hover:border-base-content/40 focus:border-base-content/40 w-full justify-start gap-2 cursor-default">
                        <span class="icon-[simple-icons--dotnet] text-xl"></span>
                        C#
                    </span>
                    <span class="btn btn-outline border-base-content/40 hover:border-base-content/40 focus:border-base-content/40 w-full justify-start gap-2 cursor-default">
                        <span class="icon-[simple-icons--ansible] text-xl"></span>
                        Ansible
                    </span>
                    <span class="btn btn-outline border-base-content/40 hover:border-base-content/40 focus:border-base-content/40 w-full justify-start gap-2 cursor-default">
                        <span class="icon-[simple-icons--helm] text-xl"></span>
                        Helm
                    </span>
                    <span class="btn btn-outline border-base-content/40 hover:border-base-content/40 focus:border-base-content/40 w-full justify-start gap-2 cursor-default">
                        <span class="icon-[simple-icons--postgresql] text-xl"></span>
                        PostgreSQL
                    </span>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
